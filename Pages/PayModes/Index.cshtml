@page
@model SupermarketWEB.Pages.PayModes.IndexModel
@{
    ViewData["Title"] = "Index PayModes";
}
<h1>Index PayModes</h1>

<p>
    <a asp-page="/PayModes/Agregar/Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayModes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayModes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayModes[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayModes[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayModes[0].UpdatedAt)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PayModes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-page="/PayModes/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-page="/PayModes/Editar/Editar" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="/PayModes/Eliminar/Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
