@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Providers List";
}

<h1>Providers</h1>

<p>
    <a asp-page="./Providers/Agregar/CreateProv" class="btn btn-success"> Agregar Provider</a>
</p>
<p>
    <a asp-page="./Create" class="btn btn-success"> Delete Provider</a>
</p>
<p>
    <a asp-page="./Create" class="btn btn-success"> Edit Provider</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Telefono</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td>
                    <a asp-page="/Providers/Edit/EditProv" asp-route-id="@item.Id" class="btn btn-primary btn-sm"> Edit</a>
                    <a asp-page="./Providers/Eliminar/DeleteProv" asp-route-id="@item.Id" class="btn btn-danger btn-sm"> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
